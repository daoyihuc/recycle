<view >
    <view class="status  ">
        <view class="con  ">
            <view class="item">
                <text class="item_title" >订单编号:</text>
                <text  >{{info.order_sn}}</text>
            </view>
            <view  class="item">
                <text  class="item_title">下单时间:</text>
                <text  >{{info.dateline}}</text>
            </view>
            <view class="item" >
                <text  class="item_title">联系电话:</text>
                <text  >{{info.mobile}}</text>
            </view>
            <view class="address  item">
                <text  class="item_title">上门地址:</text>
                <text  >{{info.address}}</text>
            </view>
            <view class="item" >
                <text  class="item_title">回收员:</text>
                <text  >{{info.AdminInfo}}</text>
            </view>
        </view>
    </view>
    <view class="describe  ">
        <view class="title  ">
            <text  ></text>回收物资描述</view>
        <view class="item  " wx:for="{{info.Detail}}" wx:key="index">
            <view >
                <text>{{item.name}}</text>
                <text>{{":"+item.goods_weight+"KG"}}</text>
            </view>
            <text  >{{'回收单价:'+item.price+'元'}}</text>
        </view>
        <view class="item  ">
            <text  ></text>
            <text  >总计回收:<text class="color  ">{{(info.total_weight==="0.00"?'未称重':info.total_weight+'KG')}}</text>
            </text>
        </view>
        <view class="item  ">
            <text  ></text>
            <text  >总计费用:<text class="color  ">{{info.order_amount+'元'}}</text>
            </text>
        </view>
        <view class="item  ">
            <text  ></text>
            <text  >支付方式:<text class="color  ">{{info.pay_id===0?"环保金支付":"现金支付"}}</text>
            </text>
        </view>
    </view>
</view>
