

.headerItem{
    padding: 10rpx 20rpx;
    display: flex;
}
.headerItemTitle{
    color: #000000;
    font-weight: bolder;
    font-size: 25rpx;
    display: block;
    width: 150rpx;
    text-align: left;
}
.headerItemContent{
    color: #fcba30;
    font-size: 30rpx;
    margin-left: 20rpx;
}

.itemMax{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
    align-items: center;
    margin: 10rpx;
    box-shadow: 1px 1px 10px 1px #eeeeee;
}
.itemBox{
    display: flex;
    flex-direction: column;
}
.item{
    padding: 10rpx 10rpx;
}
.itemTitle{
    color: #fcba30;
    font-size: 28rpx;
}
.itemRank{
    color: #2b2b2b;
    font-size: 25rpx;
}
.itemTime{
    color: #999999;
    font-size: 20rpx;
}
.money{
    margin-right: 10rpx;
    color: #fcba30;
    font-size: 38rpx;
    font-weight: bolder;
}

