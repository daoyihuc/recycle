page {
    background: #f8f8f8;
}

.item {
    width: 722rpx;
    background: #fff;
    box-shadow: 0rpx 0rpx 6rpx 0rpx rgba(64,64,64,.1);
    border-radius: 10rpx;
    margin: 0 auto 20rpx;
    padding: 15rpx 20rpx;
    box-sizing: border-box;
    font-size: 27rpx;
    color: #333;
}

.item .header {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
}

.item .header .headerLeft {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
}

.item .header .headerLeft text {
    margin: 0 8rpx;
}

.item .header .headerLeft image:nth-of-type(1) {
    display: block;
    width: 30rpx;
    height: 30rpx;
}

.item .header .headerLeft image:nth-of-type(2) {
    display: block;
    width: 12rpx;
    height: 20rpx;
}
.main {
    display: flex;
    /*margin-top: 11rpx;*/
    -webkit-box-pack: justify;
    justify-content: space-around;
    /*height: 136rpx;*/
    margin-top: 38rpx;
}

.main image {
    display: block;
    width: 172rpx;
    height: 172rpx;
    border-radius: 6rpx;
}

.main .des {
    width: 335rpx;
}

.item .main .des>text {
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    /*-webkit-line-clamp: 2;*/
    -webkit-box-orient: vertical;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #28303E;
    line-height: 40rpx;
}


.item .main .price {
    margin-top: 35rpx;
}

.item .main .price text {
    /*display: block;*/
}

.priceTime{
    /*color: #999;*/
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    /*font-size: 25rpx;*/
    white-space: nowrap;

    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #28303E;

}
.priceMoney{

    font-weight: bolder;
    font-size: 32rpx;
    font-family: PingFang SC;
    /*font-weight: 500;*/
    color: #01BC6B;
}
.item .main .price text:nth-of-type(2) {
    font-size: 26rpx;
    line-height: 54rpx;
    text-align: right;
}

.item .footer {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    margin-top: 30rpx;
}

.item .footer .sum>text {
    text-align: right;
}

.item .footer .sum text {
    display: block;
}

.item .footer .sum .btns {
    margin-top: 5rpx;
    display: flex;
    -webkit-box-pack: end;
    justify-content: flex-end;
}

