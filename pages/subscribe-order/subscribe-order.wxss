.maxBox{
    background: rgba(255, 254, 254, 0.4);
}
.box{
    /*width: 600rpx;*/
    /*height: 400rpx;*/

}
.content{
    padding: 24rpx 30rpx;
    box-sizing: border-box;

}
.content-time{
    font-size: 32rpx;
    font-weight: 400;
    color: #1d1c1c;
    padding-top: 5px;
    padding-bottom: 5px;
    letter-spacing: 0.2rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #28303E;
}
.content-text{
    font-size: 28rpx;
    margin-top: 26rpx;
    margin-bottom: 10rpx;
    margin-left: 10rpx;

}
.scroll-view-item{
    background: #ffffff;
    border: 1rpx solid #eeeeee;
    /*box-shadow: 3px 1px 7px 3px #b9b4b4a1;*/
    border-radius: 30rpx;
    margin: 50rpx 0;
    padding-bottom: 20rpx;

}
.foot{
    height: 63rpx;
    display: flex;
    padding: 9px 37rpx;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: end;
    justify-content: flex-end;
    color: #000;
    border-top: 2rpx solid #f8f8f8;
    letter-spacing: 0.2rpx;

}
.info_button{
    width: 152rpx;
    height: 60rpx;
    border: 1px solid #CCCCCC;
    border-radius: 10px;
    text-align: center;
    line-height: 60rpx;
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #28303E;
}

.title{
    display: flex;
    height: 90rpx;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    padding: 0 10rpx;
    color: #9498A0;
    border-bottom: 2rpx solid #f8f8f8;
    font-size: 28rpx;

}
.cancelTitle{
    height: 60rpx;
    line-height: 60rpx;
    padding: 8rpx 20rpx;
    border: 1rpx solid #01BC6B;
    border-radius: 15rpx;
    color: #01BC6B;
    margin-left: 20rpx;
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #01BC6B;

}
