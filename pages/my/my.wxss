.max{
    background: url("https://cdn.jsdelivr.net/gh/daoyihuc/recyclerresouce@1.1/home27.png") no-repeat;
    background-size: 100% 30%;
}

.header{
    height: 170rpx;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    position: relative;
}
.avt{
    position: relative;
}
.header_box{
    position: absolute;
    right: 50px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    height: 120rpx;
}
.header_box_text1{
    font-weight: bold;
    margin-left: 10px;
}
.header_box_text{
    font-size: 30px;
    font-weight: bold;
    color: #fcba03;
    margin-left: 10px;
}
.head-portrait{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin: 0 25rpx;

}
.nickname{
    font-size: 32rpx;
    display: flex;
    flex-direction: column;
}
.title{
    margin-bottom: 15rpx;
    font-size: 21px;
    font-family: PingFang SC;
    font-weight: 600;
    color: #FFFFFF;
}
.user_id{
    margin-top: 11rpx;
    font-size: 28rpx;
    font-family: DINPro;
    font-weight: 500;
    color: #C5FFE3;

}
.withdraw{
    background: linear-gradient(-45deg, #787E88, #484C61);
    border-radius: 8rpx 0px 0px 8rpx;
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #FFD989;
    padding: 16rpx 20rpx;
    position: absolute;
    right: 0;
}
.edit-icon{
    width: 40rpx;
    height: 40rpx;
    margin-left: 20rpx;

}
.goUp{
    display: block;
    margin-left: 200rpx;
    height: 35rpx;
    width: 150rpx;

}
