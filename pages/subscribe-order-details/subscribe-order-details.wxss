.max{
    position: relative;
}

.status  {
    width: 750rpx;
    height: 420rpx;
    background: #FFFFFF;
    border-radius: 32rpx 32rpx 0px 0px;
    position: absolute;
    top: 100rpx;
    margin-bottom: 20rpx;
    /*display: none;*/
}

.status .title  {
    height: 90rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #333;
    margin-bottom: 3rpx;
    background: #fff;
}

.status .con  {
    padding: 53rpx 43rpx;
    box-sizing: border-box;
    background: #fff;
    font-size: 26rpx;
    line-height: 40rpx;
    border-radius: 32rpx 32rpx 0px 0px;
}
.item{
    padding: 10rpx 0;
}
.item_title{

    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #28303E;
}
.item_details{

    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #28303E;
    margin-left: 27rpx;
}
.describe  {
    width: 750rpx;
    height: 322rpx;
    background: #fff;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    position: absolute;
    top: 560rpx;
    /*bottom: 384rpx;*/
}

.describe .title  {
    display: flex;
    /*-webkit-box-align: center;*/
    align-items: center;

}
.label1{
    margin-left: 15rpx;
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 600;
    margin-left: 15rpx;
    color: #323232;
}

.label{
    width: 2px;
    height: 22rpx;
    background: #01BC6B;
    display: block;
}
.item_box{
    display: flex;
    justify-content: space-around;
}

.describe .magin  {
    margin-bottom: 40rpx;
}

.describe .item  {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    font-size: 26rpx;
    line-height: 40rpx;
    color: #000;
}

.describe .color  {
    color: #fcbc0a;
}

.address  {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.header_back{
    width: 100%;
    height: 200rpx;
    display: block;
    background: #01BC6B;
    position: absolute;
    top: 0;

}
