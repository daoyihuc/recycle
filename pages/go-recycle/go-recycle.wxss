page  {
    background-color: #f9f9f9;
}

.mainbox  {
    padding: 20rpx;
    box-sizing: border-box;
}

.card  {
    height: 198rpx;
    background: #fff;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    padding: 22rpx;
    box-sizing: border-box;
}

.card .info  {
    margin-left: 35rpx;
}

.card .info>text  {
    display: block;
    font-size: 24rpx;
}

.card .info text:nth-of-type(1) {
    color: #666;
}

.card .info text:nth-of-type(2) {
    color: #666;
    margin-top: 5rpx;
}

.card .info text:nth-of-type(3) {
    color: #999;
    margin-top: 5rpx;
}

.card .info text:nth-of-type(4) {
    color: #e48951;
    margin-top: 5rpx;
}

.card .info text:nth-of-type(4) text  {
    color: #333;
}

.navBar  {
    margin: 20rpx 0;
}

.main  {
    padding: 20rpx;
    box-sizing: border-box;
    font-size: 24rpx;
}

.main .item  {
    height: 100rpx;
    border-bottom: 1rpx solid #dfdfdf;
}

.main .item>text  {
    display: block;
    margin-bottom: 12rpx;
}

.main .item input  {
    display: block;
    width: 90rpx;
    text-align: center;
    line-height: 45rpx;
    font-size: 28rpx;
    border-bottom: 1rpx solid #888;
}

.main .item .sum  {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    color: #888;
}

.main .item .sum .num  {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    height: 100%;
    font-size: 30rpx;
}

.main .item .sum .num text  {
    width: 100rpx;
    text-align: center;
    height: 45rpx;
    font-size: 30rpx;
    line-height: 46rpx;
}

.main .item .sum .num .newW  {
    width: 25rpx;
}

.main .item .sum .num .underLine  {
    display: block;
    border-bottom: 1rpx solid #000;
}

.main .item .sum .color  {
    color: #000;
}

.btn  {
    padding-top: 30rpx;
    padding: 20rpx 30rpx 0;
    width: 100%
}

.none  {
    padding: 40rpx 0;
    width: 100vw;
    color: #b0b0b0;
    text-align: center;
    font-size: 40rpx;
}

.payType ,.payTypeText  {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    color: #000;
    font-size: 28rpx;
}

.payType  {
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
}

.opt  {
    margin: 0 20rpx;
}

view{
  box-sizing: border-box;
}