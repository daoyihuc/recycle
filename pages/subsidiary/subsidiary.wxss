
.subsidiary{
    background: #01BC6B;
    padding-top: 45rpx;
    display: flex;
    /*justify-content: center;*/
    flex-direction: column;
    align-items: center;
    height: 1800rpx;
}
.tabbar  {
    width: 60%;
    display: flex;
    background: white;
    border-radius: 20rpx;

}

 .tabbar>view  {
    -webkit-box-flex: 1;
    flex: 1;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    padding: 10rpx 0;
}

 .tabbar>view image  {
    width: 34rpx;
    height: 34rpx;
}

 .tabbar>view view  {
    font-size: 32rpx;
    margin-left: 15rpx;
}

.subsidiary .border  {
    border-right: 1rpx solid #01BC6B;
}

.segmentation  {
    width: 744rpx;
    height: 28rpx;
    margin: 0 auto;
    margin-top: 45rpx;
}

.segmentation image  {
    width: 100%;
    height: 100%;
}

.noData  {
    margin-top: 50rpx;
}

.noData image  {
    width: 100%;
}

 .orange  {
    color: #01BC6B;
}

.con  {
    width: 90%;
    margin: 20rpx 50rpx;
    background: white;
    border-radius: 20rpx;
}

.con .item  {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    padding: 30rpx;
    box-sizing: border-box;
}

.con .item>view  {
    max-width: 650rpx;
}

.con .item>view text  {
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    padding: 10rpx 0;
}
.title{
    color: #000;
}
.time{
    color: #999999;
    font-size: 30rpx;
}
.money{
    font-size: 25rpx;
    color: #01BC6B;
    font-weight: 900;
}


.con .item>view .description  {
    font-size: 30rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-wrap: break-word;
    font-weight: 200;
}
