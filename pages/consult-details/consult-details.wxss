@import "../../wxParse/wxParse.wxss";

.consult-details  {
    padding: 0 10rpx;
}

.consult-details .title  {
    font-size: 32rpx;
}

.consult-details .time  {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    color: #444;
    font-size: 26rpx;
    margin: 20rpx 0 20rpx 0;
}

.consult-details .img  {
    width: 100%;
}

.consult-details .attention .attention-img  {
    width: 100%;
}

.consult-details .attention .like  {
    width: 240rpx;
    height: 70rpx;
    border-radius: 35rpx;
    border: 2rpx solid #fcba02;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    margin: 100rpx auto;
    font-size: 26rpx;
    color: #fcba03;
}

.consult-details .attention .like image  {
    width: 32rpx;
    height: 32rpx;
    margin-right: 15rpx;
}

.consult-details .message  {
    padding-bottom: 200rpx;
}

.consult-details .message .message-item  {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    height: 150rpx;
    border-bottom: 2rpx solid #f5f5f5;
}

.consult-details .message .message-item .message-item-img-1  {
    width: 70rpx;
    height: 70rpx;
    margin-right: 40rpx;
    border-radius: 50%;
}

.consult-details .message .message-item .message-item-msg  {
    -webkit-box-flex: 1;
    flex: 1;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.consult-details .message .message-item .message-item-msg .message-item-msg-1  {
    color: #3b6da5;
    font-size: 28rpx;
    margin: 0 0 10rpx;
}

.consult-details .message .message-item .message-item-msg .message-item-msg-2  {
    font-size: 24rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    overflow: hidden;
}

.consult-details .message .message-item .message-item-img-2  {
    width: 32rpx;
    height: 32rpx;
}

.consult-details .write-msg  {
    display: -webkit-box!important;
    display: -webkit-flex!important;
    display: flex!important;
    -webkit-box-align: center!important;
    align-items: center!important;
    width: 100vw;
    padding: 20rpx 0;
    height: 100rpx;
    box-sizing: border-box;
    background: #fff;
    position: fixed;
    bottom: 0;
    z-index: 999;
}

.consult-details .write-msg .botbox  {
    width: 635rpx;
    border-radius: 33rpx;
    background: #f5f5f5;
    margin-right: 20rpx;
    z-index: 999;
    display: inline-block;
}

.consult-details .write-msg .botbox input  {
    display: block;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    text-indent: 5rpx;
    width: 100%;
}

.consult-details .write-msg .sub  {
    display: block;
}
