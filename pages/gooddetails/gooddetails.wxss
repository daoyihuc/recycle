.page {
    background-color: #f8f8f8;
}

.status {
    /*width: 750rpx;*/
    height: 254rpx;
    background: #01BC6B;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.con_title{

    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #28303E;
    margin-left: 20rpx;
}

.titles {
    height: 90rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    line-height: 50rpx;
    /*font-size: 30rpx;*/
    margin-bottom: 3rpx;
    font-size: 42rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #FFFFFF;
    /*background: #fff;*/
}

.con {
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    background: #fff;
    font-size: 26rpx;
    line-height: 40rpx;
    border-radius: 20rpx 20rpx 0 0;

}
.con_name{

    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #28303E;
}
.con_phone{

    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #28303E;
}
.item_box{
    padding: 10px 0;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.item_box_title{

    background: #FFFFFF;
    letter-spacing: 0.2px;
    margin-right: 20rpx;

    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #28303E;
}
.describe {
    background: #fff;
    padding: 10rpx 10rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
}

.describe .title {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    font-size: 32rpx;
    font-weight: 700;
    color: #fcbc0a;
}

.describe .title text {
    display: block;
    width: 7rpx;
    height: 29rpx;
    background: #fcbc0a;
    margin-right: 20rpx;
}

.describe .magin {
    margin-bottom: 40rpx;
}

.describe .item {
    display: flex;
    -webkit-box-pack: justify;
    padding: 20rpx 10rpx;
    justify-content: space-between;
    font-size: 26rpx;
    line-height: 40rpx;
    color: #000;
}

.describe .fors {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    max-width: 70vw;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.describe .color {
    color: #fcbc0a;
}

.address {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
    -webkit-box-orient: vertical;
    align-items: center;
}
.addressText {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #6C6E79;
    line-height: 36px;
}
.main {
    display: flex;
    /*margin-top: 11rpx;*/
    -webkit-box-pack: justify;
    justify-content: space-around;
    /*height: 136rpx;*/
    margin-top: 38rpx;
}

.main image {
    display: block;
    width: 172rpx;
    height: 172rpx;
    border-radius: 6rpx;
}
.main .des {
    width: 335rpx;
}

.item .main .des>text {
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    /*-webkit-line-clamp: 2;*/
    -webkit-box-orient: vertical;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #28303E;
    line-height: 40rpx;
}
.priceMoney{

    font-weight: bolder;
    font-size: 32rpx;
    font-family: PingFang SC;
    /*font-weight: 500;*/
    color: #01BC6B;
}
