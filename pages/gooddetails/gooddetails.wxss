page {
    background-color: #f8f8f8;
}

.status {
    width: 750rpx;
    height: 338rpx;
    margin-bottom: 20rpx;
}

.titles {
    height: 90rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #333;
    margin-bottom: 3rpx;
    background: #fff;
}

.con {
    padding: 20rpx 15rpx;
    box-sizing: border-box;
    background: #fff;
    font-size: 26rpx;
    line-height: 40rpx;
}
.item_box{
    padding: 10px 0;
}
.item_box_title{
    letter-spacing: 0.2px;
}
.describe {
    background: #fff;
    padding: 10rpx 10rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
}

.describe .title {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    font-size: 32rpx;
    font-weight: 700;
    color: #fcbc0a;
}

.describe .title text {
    display: block;
    width: 7rpx;
    height: 29rpx;
    background: #fcbc0a;
    margin-right: 20rpx;
}

.describe .magin {
    margin-bottom: 40rpx;
}

.describe .item {
    display: flex;
    -webkit-box-pack: justify;
    padding: 20rpx 10rpx;
    justify-content: space-between;
    font-size: 26rpx;
    line-height: 40rpx;
    color: #000;
}

.describe .fors {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    max-width: 70vw;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.describe .color {
    color: #fcbc0a;
}

.address {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
    -webkit-box-orient: vertical;
}
.addressText {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
