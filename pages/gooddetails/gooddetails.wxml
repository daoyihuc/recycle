<view class="">
    <view class="status ">
        <view class="titles " wx:if="{{info.orderstatus===0}}">已兑换</view>
        <view class="titles " wx:if="{{info.orderstatus===1}}">已发货</view>
        <view class="titles " wx:if="{{info.orderstatus===2}}">已完成</view>
        <view class="titles" wx:if="{{info.orderstatus===3}}">已取消</view>
        <view class="con ">
            <view class="item_box">
                <text class="item_box_title">订单编号:</text>
                <text class="">{{info.order_sn}}</text>
            </view>
            <view class="item_box">
                <text class="item_box_title">下单时间:</text>
                <text class="">{{info.dateline}}</text>
            </view>
            <view class="item_box">
                <text class="item_box_title">联系电话:</text>
                <text class="">{{info.address.mobile}}</text>
            </view>
            <view class="address ">
                <text class="item_box_title">收货地址:</text>
                <view class="addressText">{{info.address.province+info.address.city+info.address.district}}
                    {{info.address.street+info.address.address}}</view>
            </view>
            <view class="item_box">
                <text class="item_box_title">收货人:</text>
                <text class="">{{info.address.contacts}}</text>
            </view>
        </view>
    </view>
    <view class="describe ">
        <view class="title ">
            <text class=""></text>下单商品</view>
        <view class="item " wx:for="{{info.GoodsList}}" wx:key="index">
            <text class="fors ">{{item.goods_name}}</text>
            <text class="">{{item.goods_price}}</text>
        </view>
        <view class="item ">
            <text class="">实付款:</text>
            <text class="color ">{{'￥'+info.total_amount||0}}</text>
        </view>
    </view>
</view>
