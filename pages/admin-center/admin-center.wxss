.item {
    width: 722rpx;
    height: 224rpx;
    margin: 10rpx auto;
    background: #fff;
    box-shadow: 0 0 12px 0 rgba(47,47,47,.1);
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    box-sizing: border-box;
}

.item .info {
    margin-left: 40rpx;
    width: 450rpx;
    font-size: 26rpx;
    color: #333;
}

.item .info>text {
    display: block;
}

.item .order {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    height: 120rpx;
    width: 120rpx;
    border: 1rpx solid #fdca30;
    margin-left: 20rpx;
    font-size: 32rpx;
    border-radius: 50%;
}

.item .order text {
    display: block;
    color: #fdca30;
}

._tabbar {
    display: flex;
    height: 50px;
    width: 100vw;
    position: fixed;
    bottom: 0;
    background: #fff;
    border-top: 2rpx solid #ddd;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

._tabbar .img {
    display: flex;
    width: 50vw;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
}

._tabbar .img image {
    display: block;
    height: 45rpx;
    width: 45rpx;
}

._tabbar .img:nth-of-type(1) text {
    color: #999;
}

.tabbar {
    display: flex;
    margin-top: 45rpx;
}

.tabbar>view {
    -webkit-box-flex: 1;
    flex: 1;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    padding: 10rpx 0;
}

.tabbar>view image {
    width: 34rpx;
    height: 34rpx;
}

.tabbar>view view {
    font-size: 32rpx;
    margin-left: 15rpx;
}

.border {
    border-right: 2rpx solid #ccc;
}

.segmentation {
    width: 744rpx;
    height: 28rpx;
    margin: 0 auto;
    margin-top: 45rpx;
}

.segmentation image {
    width: 100%;
    height: 100%;
}

.noData {
    margin-top: 50rpx;
}

.noData image {
    width: 100%;
}

.orange {
    color: #fdca30;
}

.con {
    width: 744rpx;
    margin: 15rpx auto;
}

.con .item {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    padding: 30rpx;
    box-sizing: border-box;
    background-color: #fff;
}

.con .item>view {
    max-width: 520rpx;
}

.con .item>view text {
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.con .item>view .description {
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-wrap: break-word;
    font-size: 26rpx;
}