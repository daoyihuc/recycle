
<view class="maxBox">
    <view>
        <navbar showNav="{{true}}"
                bgColor="#fdca30"
                pageName="预约"></navbar>
    </view>
    <view class="weight ">
        <text class="title ">预约重量选择</text>
        <view class="choose ">
            <text bindtap="sel" class="{{['textStyle',currentSel===index?'sel-we':'']}}"
                  data-count="{{index}}"
                  wx:for="{{weightList}}"
                  wx:for-item="_val"
                  wx:key="index">{{_val}}</text>
        </view>
        <text class="tips">{{'回收小于10公斤暂不保证上门回收'}}</text>
    </view>
    <view class="seleted_box">
        <van-cell title="单元格" is-link value="内容"  />
    </view>
    <view class="seleted_box">
        <van-cell title="单元格" is-link value="内容"  />
    </view>
    <view class="seleted_box ">
        <view class="protocolbox">
            <van-checkbox value="{{ checked }}"
                          shape="square"
                          checked-color="#fdca30"
                          bind:change="onChange">预约下单即代表您已同意<text>《免责条款》</text></van-checkbox>
        </view>
    </view>


    <view bindtap="" class="submit ">立即预约</view>
</view>

