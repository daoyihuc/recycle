.swiper-wrap {
    position: relative;
}

swiper{
    height: 100%;
}

swiper image {
    height: 100%;
    width: 100%;
}

.swiper-dots {
    display: flex;
    position: absolute;
    right: 30rpx;
    bottom: 15rpx;
    width: 72rpx;
    height: 36rpx;
    background-image: url(data:image/png;base64,);
    background-size: 100% 100%;
}

.swiper-dots .num {
    width: 36rpx;
    height: 36rpx;
    border-radius: 50px;
    font-size: 24rpx;
    color: #fff;
    text-align: center;
    line-height: 36rpx;
}

.swiper-dots .sign {
    position: absolute;
    top: 0;
    left: 50%;
    line-height: 36rpx;
    font-size: 22rpx;
    color: #fff;
    transform: translateX(-50%);
}