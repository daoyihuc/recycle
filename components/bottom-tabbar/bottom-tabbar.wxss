.bottom-tabbar  {
    display: flex;
    justify-content: space-around;
    -webkit-box-align: center;
    align-items: center;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    border-top: 2rpx solid #ddd;
    width: 100%;
    height: 50px;
    z-index: 999;
}

.bottom-tabbar .bottom-tabbar-item  {
    position: relative;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
}

.bottom-tabbar .bottom-tabbar-item image  {
    width: 42rpx;
    height: 42rpx;
}

.bottom-tabbar .bottom-tabbar-item text  {
    font-size: 20rpx;
    margin-bottom: 10rpx;
    margin-top: 10rpx;
}

.bottom-tabbar .bottom-tabbar-item .bottom-tabbar-item-center-img  {
    width: 80rpx;
    height: 80rpx;
    margin-top: -60rpx;
}

.bottom-tabbar .bottom-tabbar-item .bottom-tabbar-item-center-text  {
    font-size: 32rpx;
    margin-top: 15rpx;
}

.bottom-tabbar .no-click-color  {
    color: #999;
}

.bottom-tabbar .click-color  {
    color: #fcc429;
}